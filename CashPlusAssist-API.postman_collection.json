		{
			"name": "Sessão",
			"item": [
				{
					"name": "Criar Sessão",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/sessao/criar?userId=operador123",
							"host": ["{{baseUrl}}"],
							"path": ["sessao", "criar"],
							"query": [
								{
									"key": "userId",
									"value": "operador123",
									"description": "ID do usuário (opcional, padrão: 'user')"
								}
							]
						},
						"description": "Cria uma nova sessão e retorna um token de autenticação"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.collectionVariables.set('sessionToken', jsonData.token);",
									"        console.log('Token salvo: ' + jsonData.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"response": []
				},
				{
					"name": "Validar Sessão",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-Session-Token",
								"value": "{{sessionToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/sessao/validar",
							"host": ["{{baseUrl}}"],
							"path": ["sessao", "validar"]
						},
						"description": "Valida se o token de sessão é válido"
					},
					"response": []
				}
			]
		},
